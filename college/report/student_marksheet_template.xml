<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_student_marksheet">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="text-center">
                        <t t-if="form.get('student_id')">
                            <h2>
                                <strong><t t-esc="form['student_id'][1]"/>:
                                    Mark List
                                </strong>
                            </h2>
                        </t>
                        <h3>
                            <strong>
                                <t t-esc="form['student_course_id']"/>
                                -
                                <t t-esc="form['student_academic_year']"/>
                            </strong>
                        </h3>
                    </div>
                    <table>
                        <tr>
                            <td>
                                <h3>
                                    <strong>Exam</strong>
                                </h3>
                            </td>
                            <td>
                                <h3>
                                    <strong>:</strong>
                                </h3>
                            </td>
                            <td>
                                <t t-if="form.get('exam_type_id')">
                                    <h3>
                                        <strong>
                                            <t t-esc="form['exam_type_id']"/>
                                        </strong>
                                    </h3>
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <h3>
                                    <strong>Result</strong>
                                </h3>
                            </td>
                            <td>
                                <h3>
                                    <strong>:</strong>
                                </h3>
                            </td>
                            <td>
                                <t t-if="result">
                                    <h3>
                                        <strong>
                                            <t t-esc="result"/>
                                        </strong>
                                    </h3>
                                </t>
                            </td>
                        </tr>
                    </table>
                    <table class="table table-bordered mt32">
                        <thead>
                            <tr>
                                <th name="th_subject" class="text-left">
                                    <span>Subject</span>
                                </th>
                                <th name="th_mark" class="text-left">
                                    <span>Mark</span>
                                </th>
                                <th name="th_passmark" class="text-left">
                                    <span>Pass Mark</span>
                                </th>
                                <th name="th_pass_fail" class="text-left">
                                    <span>Pass/Fail</span>
                                </th>
                            </tr>
                        </thead>
                        <t t-foreach="mark" t-as="line">
                            <tr>
                                <td>
                                    <span t-esc="line['subject']"/>
                                </td>
                                <td>
                                    <span t-esc="line['mark']"/>
                                </td>
                                <td>
                                    <span t-esc="line['pass_mark']"/>
                                </td>
                                <td>
                                    <span t-esc="line['pass_fail']"/>
                                </td>
                            </tr>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>